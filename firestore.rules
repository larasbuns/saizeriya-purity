rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Saizeriya outlets are public information
    match /saizeriyaOutlets/{saizeriyaOutletId} {
      allow read: if true;
      allow write: if false; // Should only be managed from the console
    }

    // Quiz responses can be created by any authenticated user (including anonymous)
    // and can be read by anyone.
    match /quizResponses/{quizResponseId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if false; // Responses are immutable
    }
  }
}
